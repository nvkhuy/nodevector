{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "files": [
    "src/type.d.ts",
    "node_modules/@types/node/globals.d.ts",
    "node_modules/@types/node/fs.d.ts"
  ],
  "include": [
    "src/**/*"
  ]
}